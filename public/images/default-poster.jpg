<svg width="300" height="450" viewBox="0 0 300 450" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background với gradient dark theme -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1d24;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#151822;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="300" height="450" fill="url(#bgGradient)"/>
  
  <!-- Icon camera/film -->
  <g transform="translate(150, 180)">
    <!-- Film frame -->
    <rect x="-60" y="-40" width="120" height="80" rx="4" fill="none" stroke="#F53003" stroke-width="3" opacity="0.6"/>
    <rect x="-50" y="-30" width="100" height="60" fill="#262833" opacity="0.5"/>
    
    <!-- Film holes -->
    <circle cx="-45" cy="0" r="3" fill="#F53003" opacity="0.4"/>
    <circle cx="45" cy="0" r="3" fill="#F53003" opacity="0.4"/>
    
    <!-- Camera icon -->
    <circle cx="0" cy="-5" r="15" fill="none" stroke="#F53003" stroke-width="2" opacity="0.5"/>
    <circle cx="0" cy="-5" r="8" fill="#F53003" opacity="0.3"/>
  </g>
  
  <!-- Text -->
  <text x="150" y="280" text-anchor="middle" fill="#a6a6b0" font-family="Arial, sans-serif" font-size="14" font-weight="500">Chưa có poster</text>
  <text x="150" y="300" text-anchor="middle" fill="#666" font-family="Arial, sans-serif" font-size="11">No Poster Available</text>
</svg>
